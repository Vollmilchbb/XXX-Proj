<mvc:View controllerName="de.sachsen.sab.antrdatpruf.controller.antragsdatenerfassung.Bonitaetsdaten"
          xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
          xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
          displayBlock="true">

    <Page id="page"
          navButtonPress="onNavBack" showNavButton="true"
          title="{i18n>bonitaetsDatenTitle}" enableScrolling="true">
        <content>
            <l:VerticalLayout id="oVerticalContent" width="100%"></l:VerticalLayout>
            <f:Form id="dataForm" editable="true">
                <f:layout>
                    <f:ResponsiveGridLayout labelSpanXL="3"
                                            labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false"
                                            emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0"
                                            columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
                </f:layout>
                <f:formContainers>
                    <f:FormContainer title="Bonitaetsdaten">
                        <f:formElements>
                            <f:FormElement label="{i18n>Antrag_AllgAngaben_Antragsteller_BerufArbeitgeber_Angestellt}">
                                <f:fields>
                                    <CheckBox id="Antrag_AllgAngaben_Antragsteller_BerufArbeitgeber_Angestellt"
                                              tooltip="{i18n>ttAntrag_AllgAngaben_Antragsteller_BerufArbeitgeber_Angestellt}"
                                              selected="{
												path : 'antragsData>/Antrag_AllgAngaben_Antragsteller_BerufArbeitgeber_Angestellt/value',
												type : 'sap.ui.model.type.Boolean'
												}"
                                              text="vorhanden"/>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>Antrag_Selbstauskunft_Antragsteller_EinnahmenausnselbstArbeit}">
                                <f:fields>
                                    <Input id="Antrag_Selbstauskunft_Antragsteller_EinnahmenausnselbstArbeit"
                                           tooltip="{i18n>ttAntrag_Selbstauskunft_Antragsteller_EinnahmenausnselbstArbeit}"
                                           valueStateText="Error state"
                                           width="15em"
                                           value="{
													path : 'antragsData>/Antrag_Selbstauskunft_Antragsteller_EinnahmenausnselbstArbeit/value',
													type : 'sap.ui.model.type.Float',
													formatOptions : {
														groupingEnabled : true
													},
													constraints : {
														minimum : 0,
														maximum : 25
													}
												}"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>Antrag_Selbstauskunft_Antragsteller_Kindergeld}">
                                <f:fields>
                                    <Input id="Antrag_Selbstauskunft_Antragsteller_Kindergeld"
                                           tooltip="{i18n>ttAntrag_Selbstauskunft_Antragsteller_Kindergeld}"
                                           valueStateText="Error state"
                                           width="15em"
                                           value="{
													path : 'antragsData>/Antrag_Selbstauskunft_Antragsteller_Kindergeld/value',
													type : 'sap.ui.model.type.Float',
													formatOptions : {
														groupingEnabled : true
													},
													constraints : {
														minimum : 0,
														maximum : 25
													}
												}"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>Antrag_Selbstauskunft_Antragsteller_AnzahlKinderKindergeld}">
                                <f:fields>
                                    <Input id="Antrag_Selbstauskunft_Antragsteller_AnzahlKinderKindergeld"
                                           tooltip="{i18n>ttAntrag_Selbstauskunft_Antragsteller_AnzahlKinderKindergeld}"
                                           valueStateText="Error state"
                                           width="15em"
                                           value="{
													path : 'antragsData>/Antrag_Selbstauskunft_Antragsteller_AnzahlKinderKindergeld/value',
													type : 'sap.ui.model.type.Integer',
													formatOptions : {
														groupingEnabled : true
													},
													constraints : {
														minimum : 0,
														maximum : 25
													}
												}"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>Antrag_Summe_Alter_der_Kinder}">
                                <f:fields>
                                    <Input id="Antrag_Summe_Alter_der_Kinder"
                                           tooltip="{i18n>ttAntrag_Summe_Alter_der_Kinder}"
                                           valueStateText="Error state"
                                           width="15em"
                                           value="{
													path : 'antragsData>/Antrag_Summe_Alter_der_Kinder/value',
													type : 'sap.ui.model.type.Integer',
													formatOptions : {
														groupingEnabled : true
													},
													constraints : {
														minimum : 0,
														maximum : 25
													}
												}"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>Antrag_Selbstauskunft_Verbindlichkeiten_Belastung}">
                                <f:fields>
                                    <Input id="Antrag_Selbstauskunft_Verbindlichkeiten_Belastung"
                                           tooltip="{i18n>ttAntrag_Selbstauskunft_Verbindlichkeiten_Belastung}"
                                           valueStateText="Error state"
                                           width="15em"
                                           value="{
													path : 'antragsData>/Antrag_Selbstauskunft_Verbindlichkeiten_Belastung/value',
													type : 'sap.ui.model.type.Float',
													formatOptions : {
														groupingEnabled : true
													},
													constraints : {
														minimum : 0,
														maximum : 25
													}
												}"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>Antrag_Selbstauskunft_Antragsteller_SummeAusgaben}">
                                <f:fields>
                                    <Input id="Antrag_Selbstauskunft_Antragsteller_SummeAusgaben"
                                           tooltip="{i18n>ttAntrag_Selbstauskunft_Antragsteller_SummeAusgaben}"
                                           valueStateText="Error state"
                                           width="15em"
                                           value="{
													path : 'antragsData>/Antrag_Selbstauskunft_Antragsteller_SummeAusgaben/value',
													type : 'sap.ui.model.type.Float',
													formatOptions : {
														groupingEnabled : true
													},
													constraints : {
														minimum : 0,
														maximum : 25
													}
												}"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>Antrag_Selbstauskunft_Antragsteller_Vermogeneintragen}">
                                <f:fields>
                                    <CheckBox id="Antrag_Selbstauskunft_Antragsteller_Vermogeneintragen"
                                              tooltip="{i18n>ttAntrag_Selbstauskunft_Antragsteller_Vermogeneintragen}"
                                              selected="{
												path : 'antragsData>/Antrag_Selbstauskunft_Antragsteller_Vermogeneintragen/value',
												type : 'sap.ui.model.type.Boolean'
												}"
                                              text="vorhanden"/>
                                </f:fields>
                            </f:FormElement>


                            <f:FormElement label="{i18n>Antrag_Selbstauskunft_Vermogen_BetragVermogenAntrag1}">
                                <f:fields>
                                    <Input id="Antrag_Selbstauskunft_Vermogen_BetragVermogenAntrag1"
                                           tooltip="{i18n>ttAntrag_Selbstauskunft_Vermogen_BetragVermogenAntrag1}"
                                           valueStateText="Error state"
                                           width="15em"
                                           value="{
													path : 'antragsData>/Antrag_Selbstauskunft_Vermogen_BetragVermogenAntrag1/value',
													type : 'sap.ui.model.type.Float',
													formatOptions : {
														groupingEnabled : true
													},
													constraints : {
														minimum : 0,
														maximum : 25
													}
												}"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>Antrag_Selbstauskunft_Vermogen_BetragVermogenAntrag2}">
                                <f:fields>
                                    <Input id="Antrag_Selbstauskunft_Vermogen_BetragVermogenAntrag2"
                                           tooltip="{i18n>ttAntrag_Selbstauskunft_Vermogen_BetragVermogenAntrag2}"
                                           valueStateText="Error state"
                                           width="15em"
                                           value="{
													path : 'antragsData>/Antrag_Selbstauskunft_Vermogen_BetragVermogenAntrag2/value',
													type : 'sap.ui.model.type.Float',
													formatOptions : {
														groupingEnabled : true
													},
													constraints : {
														minimum : 0,
														maximum : 26
													}
												}"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="{i18n>Antrag_Selbstauskunft_Vermogen_BetragVermogenAntrag12}">
                                <f:fields>
                                    <Input id="Antrag_Selbstauskunft_Vermogen_BetragVermogenAntrag12"
                                           tooltip="{i18n>ttAntrag_Selbstauskunft_Vermogen_BetragVermogenAntrag12}"
                                           valueStateText="Error state"
                                           width="15em"
                                           value="{
													path : 'antragsData>/Antrag_Selbstauskunft_Vermogen_BetragVermogenAntrag12/value',
													type : 'sap.ui.model.type.Float',
													formatOptions : {
														groupingEnabled : true
													},
													constraints : {
														minimum : 0,
														maximum : 25
													}
												}"
                                    />
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </content>

        <footer>
            <Toolbar
                    id="otbFooter">
                <Button
                        icon="sap-icon://alert"
                        text="{= ${message>/}.length }"
                        visible="{= ${message>/}.length > 0 }"
                        type="Emphasized"
                        press="onMessagePopoverPress"/>

                <ToolbarSpacer/>
                <Button type="Accept" text="{i18n>saveAndQuit}" class="sapUiTinyMarginEnd" press="onValidateBtnPress">
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow"/>
                    </layoutData>
                </Button>
                <Button type="Reject" text="{i18n>reject}" press="onHandleReject" class="sapUiSmallMarginEnd">
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow"/>
                    </layoutData>
                </Button>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>