<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<f:SimpleForm id="infoKundeFrmID"
			editable="false"
			layout="ResponsiveGridLayout"
			labelSpanXL="4"
			title="{i18n>infoKunde}"
			labelSpanL="3"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="4"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="2"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
				<Label text="GP-Nummer" />
				<Text text="{Kunde>/GPNr}" />
				<Label text="Name/Vorname" />
				<Text text="{Kunde>/Name} {Kunde>/Vorname}" />
				<Label text="Geburtsdatum" />
				<Text text="{Kunde>/Geburtstag}" />
			</f:content>
		</f:SimpleForm>
	</VBox>
</core:FragmentDefinition>
