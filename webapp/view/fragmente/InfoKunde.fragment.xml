<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<HBox class="sapUiSmallMargin">
		<VBox>
		<f:SimpleForm id="infoKundeFrmID"
			editable="false"
			layout="ResponsiveGridLayout"
			labelSpanXL="4"
			title="{i18n>infoKunde}"
			labelSpanL="3"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="4"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="2"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
				<Label text="GP-Nummer" />
				<Text text="{Kunde>/Partner}" />
				<Label text="Name/Vorname" />
				<Text text="{Kunde>/Name} {Kunde>/Vorname}" />
				<Label text="Email" />
				<Text text="{Kunde>/Email}" />
			</f:content>
		</f:SimpleForm>
		</VBox>
		<VBox>
			<f:SimpleForm id="infoKundeFrmID2"
						  editable="false"
						  layout="ResponsiveGridLayout"
						  labelSpanXL="4"
						  title=""
						  labelSpanL="3"
						  labelSpanM="4"
						  labelSpanS="12"
						  adjustLabelSpan="false"
						  emptySpanXL="0"
						  emptySpanL="4"
						  emptySpanM="0"
						  emptySpanS="0"
						  columnsXL="2"
						  columnsL="2"
						  columnsM="1"
						  singleContainerFullSize="false" >
				<f:content>
					<FlexBox><Label></Label></FlexBox>
					<FlexBox><Label></Label></FlexBox>
					<FlexBox><Label></Label></FlexBox>
					<FlexBox><Label></Label></FlexBox>
					<Label text="Ort" />
					<Text text="{Kunde>/Ort}" />
					<Label text="PLZ" />
					<Text text="{Kunde>/Plz}" />
					<Label text="Weitere Produkte" />
					<Text text="{Kunde>/Addproducts}" />
				</f:content>
			</f:SimpleForm>
		</VBox>
	</HBox>
</core:FragmentDefinition>
<!--  //GP-Nummer, Name, Vorname, Adresse, Kontaktinformationen(Email, Telefonnummer), Kunde seit, weitere Produkte Ratingklasse KundenKontakt Ã¼ber Postbox -->


